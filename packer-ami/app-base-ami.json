{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "us-west-2"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "app-base-ami",
            "instance_type": "t2.micro",
            "region": "us-west-2",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami": "ami-0bbe6b35405ecebdb",            
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": ["sudo apt-get update -y",
                       "sudo apt-get install libpython-stdlib libpython2.7-minimal libpython2.7-stdlib python python2.7 -y"
                    ]
          },
        {
            "type": "ansible",
            "playbook_file": "../ansible-cfm/app-base.yml"
          }
    ]
}